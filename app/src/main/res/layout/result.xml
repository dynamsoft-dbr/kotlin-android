<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/dialog_margin"
    android:paddingLeft="@dimen/dialog_margin"
    android:paddingRight="@dimen/dialog_margin"
    android:paddingTop="@dimen/dialog_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"
        android:text="Result"
        android:id="@+id/title"
        android:layout_weight="2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:lineSpacingMultiplier="1.5"
        android:textIsSelectable="true"
        android:textColor="@color/result"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:autoLink="web"
        android:id="@+id/message"
        android:layout_weight="10"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:minHeight="64dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="2">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:src="@mipmap/clock"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/result"
                android:layout_gravity="left"
                android:layout_marginLeft="8dp"
                android:id="@+id/tvTime"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="OK"
            android:id="@+id/positiveButton"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="right"
            android:textColor="@color/aboutOK"
            android:clickable="true"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:layout_weight="3"/>
    </LinearLayout>
</LinearLayout>